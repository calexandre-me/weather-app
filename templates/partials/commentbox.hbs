<div class="container-feedback">
    <div id="icon-feedback">
        <i class="fa-solid fa-comments"></i>
    </div>
    <div id="my-dialog">
        <form method="POST" autocomplete="off" id="form" >
            
            <input type="email" id="email" name="email" placeholder="Email" autocomplete="false"/>
            <textarea maxlength="100" id="text-comment" name="comment" placeholder="Send a 100 length message..." autocomplete="false" ></textarea>
            <input type="submit" value="Submit" id="submit"/>
        </form>
    </div>
</div> 